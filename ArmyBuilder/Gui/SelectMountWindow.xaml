<Window x:Class="ArmyBuilder.SelectMountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Mount" Height="400" Width="300">
    <Grid>
        <ListBox x:Name="MountListBox" DisplayMemberPath="Name" SelectionMode="Single" />
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="75" Click="OkButton_Click"/>
    </Grid>
</Window>
