<Window x:Class="ArmyBuilder.EditArmyForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Army" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Edit Army Details" FontSize="16" FontWeight="Bold" Margin="10"/>
            <TextBlock Text="Name:" Margin="10,10,0,0"/>
            <TextBox x:Name="ArmyNameTextBox" Margin="10,0,10,0"/>
            <TextBlock Text="Author:" Margin="10,10,0,0"/>
            <TextBox x:Name="ArmyAuthorTextBox" Margin="10,0,10,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Speichern" Width="75" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Abbrechen" Width="75" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>